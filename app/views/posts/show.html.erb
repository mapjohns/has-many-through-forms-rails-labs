<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h2>Categories</h2>
<% @post.categories.each do |cat| %>
    <%= cat.name %>
<% end %>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
    <%= "#{comment.user.username} says: #{comment.content}" %><br>
<% end %>

<h2>Add Comment</h2>
<%= form_for @comment do |f| %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.label :content %>
    <%= f.text_field :content %><br>
    Select User:
    <%= f.collection_select :user_id, User.all, :id, :username, include_blank: true %><br><br>
    <%= f.fields_for :user, User.new() do |us_field| %>
        <label>New User:</label><br>
        <%= us_field.label :username %>
        <%= us_field.text_field :username %><br>
        <%= us_field.label :email %>
        <%= us_field.text_field :email %><br>
    <% end %>
    <%= f.submit %>
<% end %>



<h2>Top Commenters!</h2>
<% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
<% end %>
